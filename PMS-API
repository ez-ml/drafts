openapi: 3.0.0
info:
  title: LLM Prompt Template Management Service
  version: 1.0.0
paths:
  /templates/{id}:
    get:
      summary: Get a template by its ID
      operationId: getTemplateByID
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Template retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PromptTemplate'

    put:
      summary: Update an existing prompt template
      operationId: updatePromptTemplate
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PromptTemplate'
      responses:
        '200':
          description: Template updated successfully

    delete:
      summary: Delete a prompt template
      operationId: deletePromptTemplate
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: string
      responses:
        '204':
          description: Template deleted successfully

    patch:
      summary: Deactivate a prompt template
      operationId: deactivatePromptTemplate
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Template deactivated successfully

  /templates/version/{version}:
    get:
      summary: Get templates by version
      operationId: getPromptTemplateByversion
      parameters:
        - name: version
          in: path
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Templates retrieved successfully
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/PromptTemplate'

  /templates:
    get:
      summary: List prompt templates with filters
      operationId: listPromptTemplates
      parameters:
        - name: status
          in: query
          schema:
            type: boolean
        - name: collection
          in: query
          schema:
            type: string
        - name: rating
          in: query
          schema:
            type: string
        - name: tags
          in: query
          schema:
            type: array
            items:
              type: string
      responses:
        '200':
          description: Templates listed successfully
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/PromptTemplate'

    post:
      summary: Save a new prompt template
      operationId: savePromptTemplate
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PromptTemplate'
      responses:
        '201':
          description: Template saved successfully

  /templates/collection/{collectionID}:
    get:
      summary: Get prompts by Collection ID
      operationId: getPromptsByCollectionID
      parameters:
        - name: collectionID
          in: path
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Templates retrieved successfully
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/PromptTemplate'

components:
  schemas:
    PromptTemplate:
      type: object
      properties:
        id:
          type: string
        collectionID:
          type: string
        version:
          type: string
        status:
          type: boolean
        tags:
          type: array
          items:
            type: string
        rating:
          type: string
        llm:
          type: string
        template:
          type: string
        metadata:
          type: object
          properties:
            createdAt:
              type: string
            modifiedAt:
              type: string
            author:
              type: string
            usageCount:
              type: integer
