openapi: 3.0.0
info:
  title: Prompt Management System API
  description: API for managing LLM prompts across different lines of business (Namespaces).
  version: "1.0.0"

servers:
  - url: 'https://api.yourpromptsystem.com/v1'

paths:
  /namespaces:
    post:
      summary: Create a new Namespace
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/NamespaceCreate'
      responses:
        '201':
          description: Namespace created successfully

    get:
      summary: Retrieve the list of all Namespaces
      responses:
        '200':
          description: List of all namespaces
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Namespace'

  /namespaces/{namespaceId}:
    get:
      summary: Get a Namespace by ID
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Namespace details
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Namespace'

    put:
      summary: Update a Namespace
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/NamespaceUpdate'
      responses:
        '200':
          description: Namespace updated successfully

    patch:
      summary: Set a Namespace Inactive
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
      responses:
        '204':
          description: Namespace set to inactive

  /namespaces/{namespaceId}/projects:
    post:
      summary: Create a new Project within a Namespace
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ProjectCreate'
      responses:
        '201':
          description: Project created successfully

    get:
      summary: Get all Projects in one Namespace
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: List of all projects in the specified namespace
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Project'


  /namespaces/{namespaceId}/projects/{projectId}/prompts:
    post:
      summary: Create or update a Prompt in a Project
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
        - in: path
          name: projectId
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PromptCreate'
      responses:
        '201':
          description: Prompt created or updated successfully

    patch:
      summary: Set a Prompt Inactive
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
        - in: path
          name: projectId
          required: true
          schema:
            type: string
      responses:
        '204':
          description: Prompt set to inactive

  /prompts/search/namespace/{namespaceId}:
    post:
      summary: Search all Prompts in one Namespace with search criteria
      parameters:
        - in: path
          name: namespaceId
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PromptSearch'
      responses:
        '200':
          description: List of prompts in the namespace matching search criteria
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Prompt'

  /prompts/search/all:
    post:
      summary: Search all Prompts in all Namespaces and Projects with search criteria
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PromptSearch'
      responses:
        '200':
          description: List of all prompts matching search criteria
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Prompt'

components:
  schemas:
    NamespaceCreate:
      type: object
      properties:
        name:
          type: string
          description: User-friendly name for the namespace

    NamespaceUpdate:
      type: object
      properties:
        name:
          type: string
          description: User-friendly name for the namespace

    Namespace:
      type: object
      properties:
        id:
          type: string
        name:
          type: string

    ProjectCreate:
      type: object
      properties:
        name:
          type: string
          description: User-friendly name for the project

    Project:
      type: object
      properties:
        id:
          type: string
        namespaceId:
          type: string
        name:
          type: string


    PromptCreate:
      type: object
      required:
        - name
        - content
        - LLM
      properties:
        name:
          type: string
          description: User-friendly name for the prompt
        content:
          type: string
          description: Actual prompt text
        LLM:
          type: string
          description: LLM model name for which the prompt has been developed
        isPublic:
          type: boolean
          description: Indicates if the prompt is public

    Prompt:
      type: object
      properties:
        id:
          type: string
        projectId:
          type: string
        name:
          type: string
        content:
          type: string
        LLM:
          type: string
        version:
          type: integer
        isPublic:
          type: boolean

    PromptSearch:
      type: object
      properties:
        LLM:
          type: string
          description: Search by LLM model name
        version:
          type: integer
          description: Search by version
        isPublic:
          type: boolean
          description: Search by public visibility
        namespaceID:
          type: string
          description: Search by Namecpace ID
        projectID:
          type: string
          description: Search by Project ID
